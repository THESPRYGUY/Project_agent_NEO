# Project NEO Intake Service - environment configuration

# Output directory root for generated repos
NEO_REPO_OUTDIR=/_data/generated

# Strict KPI parity gate in CI (true/false)
FAIL_ON_PARITY=false

# Apply overlays after build (true/false)
NEO_APPLY_OVERLAYS=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Resilience & Observability
# Max allowed request body size in bytes (default 1MB)
MAX_BODY_BYTES=1048576
# Simple in-memory rate limit (per-IP)
RATE_LIMIT_RPS=5
RATE_LIMIT_BURST=10
# Telemetry sampling rate for non-critical events (0.0â€“1.0)
TELEMETRY_SAMPLE_RATE=0.1

# Optional: injected by CI/CD at build time
# GIT_SHA=<commit-sha>
