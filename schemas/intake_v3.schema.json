{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://project-neo/schemas/intake_v3.schema.json",
  "title": "Project NEO Intake v3 Payload",
  "type": "object",
  "properties": {
    "intake_version": { "const": "v3.0" },
    "identity": {
      "type": "object",
      "properties": {
        "agent_id": { "type": "string", "minLength": 1 },
        "display_name": { "type": "string", "minLength": 1 },
        "owners": { "type": "array", "items": { "type": "string" }, "minItems": 1 }
      },
      "required": ["agent_id", "display_name", "owners"],
      "additionalProperties": true
    },
    "context": {
      "type": "object",
      "properties": {
        "naics": {
          "type": "object",
          "properties": {
            "code": { "type": "string", "minLength": 2 }
          },
          "required": ["code"],
          "additionalProperties": true
        },
        "region": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["naics"],
      "additionalProperties": true
    },
    "role": {
      "type": "object",
      "properties": {
        "function_code": { "type": "string", "minLength": 1 },
        "role_code": { "type": "string", "minLength": 1 },
        "role_title": { "type": "string" },
        "objectives": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["function_code", "role_code"],
      "additionalProperties": true
    },
    "governance_eval": {
      "type": "object",
      "properties": {
        "gates": {
          "type": "object",
          "properties": {
            "PRI_min": { "type": "number" },
            "hallucination_max": { "type": "number" },
            "audit_min": { "type": "number" }
          },
          "required": ["PRI_min", "hallucination_max", "audit_min"],
          "additionalProperties": true
        }
      },
      "required": ["gates"],
      "additionalProperties": true
    }
  },
  "required": [
    "intake_version",
    "identity",
    "context",
    "role",
    "governance_eval"
  ],
  "additionalProperties": true,
  "not": {
    "anyOf": [
      { "required": ["legacy"] },
      { "required": ["legacy_industry"] },
      { "required": ["legacy_tool_toggles"] },
      { "required": ["manual_log_level"] },
      { "required": ["meta"] },
      { "required": ["agent_profile"] },
      { "required": ["governance"] },
      { "required": ["privacy"] }
    ]
  }
}

