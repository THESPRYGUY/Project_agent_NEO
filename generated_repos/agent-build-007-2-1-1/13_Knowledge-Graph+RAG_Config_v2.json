{
  "caching": {
    "bypass_on_high_stakes": true,
    "per_user_namespace": true,
    "query_cache_ttl_min": 60,
    "result_cache_ttl_min": 60
  },
  "chunking": {
    "max_tokens": 800,
    "strategy": "semantic"
  },
  "data_quality": {
    "dedupe": true,
    "lang_filter": [
      "en"
    ]
  },
  "default_index": "default",
  "definition_of_done": [
    "All indices reference datasets from Tool+Data Registry",
    "Caching enabled with sensible TTLs and high-stakes bypass",
    "Chunking/embedding params tuned for token-light performance",
    "Retrieval filters align with Safety+Privacy"
  ],
  "embeddings": {
    "model": "text-embedding-3-large"
  },
  "indexes": [],
  "indices": [
    {
      "name": "default_index"
    }
  ],
  "meta": {
    "agent_id": "AGT-112330-TURKEY-RND-0001",
    "authors": [
      "CAIO",
      "CPA",
      "TeamLead"
    ],
    "created_at": "1970-01-01T00:00:00Z",
    "name": "13_Knowledge-Graph+RAG_Config_v2.json",
    "owner": "CDO+CPA",
    "version": "v2.0.0"
  },
  "objective": "Token-light configuration for indexing, embeddings, retrieval, and caching for GEN2 RAG.",
  "observability": {
    "dashboards": [
      "RAG_performance",
      "index_health"
    ],
    "log_fields": [
      "hits",
      "index_id",
      "latency_ms",
      "query_hash",
      "reranker_used",
      "tokens_saved_cached"
    ]
  },
  "refs": {
    "memory_schema": "08_Memory-Schema_v2.json",
    "prompt_pack": "10_Prompt-Pack_v2.json",
    "safety_privacy": "05_Safety+Privacy_Guardrails_v2.json",
    "tool_data_registry": "12_Tool+Data-Registry_v2.json"
  },
  "rerankers": [
    {
      "name": "cross-encoder",
      "top_k": 5
    }
  ],
  "retrieval": {
    "filters": {
      "classification_max": "confidential",
      "exclude_flags": [
        "minor_data"
      ]
    },
    "keyword": {
      "enable": true
    },
    "mmr": {
      "enable": true,
      "lambda": 0.5,
      "top_k": 8
    },
    "quality_controls": {
      "denylist_domains": [],
      "freshness_days_warn": 365,
      "min_source_quality": "authoritative_or_better"
    },
    "reranker": {
      "enable": true,
      "model": "colbert-lite",
      "top_k": 6
    },
    "response_budget": {
      "max_passages": 6,
      "max_tokens_synth": 450
    },
    "strategy": "hybrid",
    "vector": {
      "enable": true,
      "top_k": 12
    }
  },
  "retrievers": [
    {
      "index": "default_index",
      "name": "default_retriever",
      "top_k": 8
    }
  ],
  "safety_overrides": {
    "honor_jurisdictional_rules": true,
    "mask_pii_in_passages": true,
    "strip_untrusted_blocks": true
  },
  "schema_keys": [
    "caching",
    "chunking",
    "data_quality",
    "default_index",
    "definition_of_done",
    "embeddings",
    "indexes",
    "indices",
    "meta",
    "objective",
    "observability",
    "refs",
    "rerankers",
    "retrieval",
    "retrievers",
    "safety_overrides",
    "token_budget",
    "update_policy",
    "version"
  ],
  "token_budget": {
    "max_output_tokens": 1000
  },
  "update_policy": {
    "owner": "CPA",
    "schedule": "weekly"
  },
  "version": 2
}
