  },
  "definitions": {
    "PRI": "Prompt/Plan Reason Integrity pass ratio",
    "RTI": "Reasoning Transparency Index (from sanitized footprints)",
    "CORD": "Chain-of-Reasoning Depth score",
    "CONA": "Consensus Accuracy in debate loops",
    "RFG": "Reflection Gain (% error reduction after reflection)"
  }
